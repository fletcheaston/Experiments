{
    "name": "blog-components",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "format": "npx prettier --write .",
        "type-check": "tsc"
    },
    "dependencies": {
        "next": "14.0.4",
        "react": "^18",
        "react-dom": "^18"
    },
    "devDependencies": {
        "@headlessui/react": "^1.7.17",
        "@react-hookz/web": "^23.1.0",
        "@tailwindcss/forms": "^0.5.7",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "autoprefixer": "^10.0.1",
        "classnames": "^2.3.2",
        "eslint": "^8",
        "eslint-config-next": "^14.0.4",
        "eslint-config-prettier": "^9.1.0",
        "lodash": "^4.17.21",
        "postcss": "^8",
        "prettier": "^3.1.1",
        "prettier-plugin-tailwindcss": "^0.5.9",
        "tailwindcss": "^3.3.0",
        "typescript": "^5"
    },
    "prettier": {
        "printWidth": 120,
        "trailingComma": "all",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": false,
        "jsxSingleQuote": false,
        "singleAttributePerLine": true,
        "plugins": [
            "@trivago/prettier-plugin-sort-imports",
            "prettier-plugin-tailwindcss"
        ],
        "importOrder": [
            "<THIRD_PARTY_MODULES>",
            "^@src/(.*)$",
            "^@components/(.*)$",
            "^[./]"
        ],
        "importOrderSeparation": true,
        "importOrderSortSpecifiers": true
    }
}
